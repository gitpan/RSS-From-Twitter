#!/usr/bin/perl

our $VERSION = '0.02'; # VERSION

use 5.010;
use strict;
use warnings;

use Perinci::CmdLine;
Perinci::CmdLine->new(
    url => '/RSS/From/Twitter/get_rss_from_twitter_user')->run;

1;
#ABSTRACT: Convert Twitter user main page to RSS
#PODNAME: get-rss-from-twitter-user

__END__

